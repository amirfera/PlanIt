<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.HomePageController"
      alignment="CENTER" spacing="15" style="-fx-background-color: #f0f4f8;">

    <!-- Logo -->
    <ImageView fitWidth="150" fitHeight="150">
        <image>
            <Image url="@/Logo.png"/> <!-- Ensure logo.png is in src/resources -->
        </image>
    </ImageView>

    <!-- Title Text -->
    <Label text="Plan It!" style="-fx-font-size: 36; -fx-text-fill: #333333;"/>

    <!-- Buttons -->
    <Button text="View Tasks" onAction="#showTaskList"
            style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px; -fx-cursor: hand;"/>
    <Button text="Add New Task" onAction="#openNewTask"
            style="-fx-font-size: 16; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px; -fx-cursor: hand;"/>
</VBox>
